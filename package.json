{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "testando conhecimento passado pelo felipe schamps",
  "main": "index.js",
  "scripts": {
    "dev": "trap \"npm run postdev\" INT TERM ; npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "postdev": "npm run services:stop",
    "test": "npm run services:up  && concurrently --names next,jest  --hide next --kill-others --success command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "posttest": "npm run services:stop",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:wait:database": "node infra/scripts/waitPostgres.js",
    "migrations:create": "node-pg-migrate --migrations-dir infra/migrations create",
    "migrations:up": "node-pg-migrate --migrations-dir infra/migrations --envPath .env.development up",
    "migrations:up:homolog": "node-pg-migrate --migrations-dir infra/migrations --envPath .env.homologation up",
    "migrations:down:homolog": "node-pg-migrate --migrations-dir infra/migrations --envPath .env.homologation down",
    "migrations:up:prod": "node-pg-migrate --migrations-dir infra/migrations --envPath .env.production up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "eslint .",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@next/env": "15.3.1",
    "async-retry": "1.3.3",
    "bcryptjs": "3.0.2",
    "dotenv": "16.5.0",
    "dotenv-expand": "12.0.2",
    "next": "15.3.1",
    "next-connect": "1.0.0",
    "node-pg-migrate": "7.6.1",
    "pg": "8.12.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "swr": "2.2.5",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "commitizen": "4.3.1",
    "concurrently": "9.1.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.1",
    "eslint-config-next": "15.3.1",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-jest": "28.8.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "prettier": "3.5.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
